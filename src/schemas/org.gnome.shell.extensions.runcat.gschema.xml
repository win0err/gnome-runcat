<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
	<enum id="org.gnome.shell.extensions.runcat.DisplayingItems">
		<value value="0" nick="character-and-percentage"/>
		<value value="1" nick="percentage-only"/>
		<value value="2" nick="character-only"/>
	</enum>

	<enum id="org.gnome.shell.extensions.runcat.RunnerPacks">
		<value value="0" nick="cat"/>
		<value value="1" nick="metronome"/>
	</enum>

	<schema
			id="org.gnome.shell.extensions.runcat"
			path="/org/gnome/shell/extensions/runcat/"
	>

		<key type="i" name="idle-threshold">
			<default>0</default>
			<summary>Idle threshold</summary>
			<description/>
		</key>

		<key type="b" name="animated-idle">
			<default>true</default>
			<summary>Animated idle</summary>
			<description/>
		</key>

		<key name="displaying-items" enum="org.gnome.shell.extensions.runcat.DisplayingItems">
			<default>'character-and-percentage'</default>
			<summary>Displaying items</summary>
			<description/>
		</key>

		<key name="runner-pack" enum="org.gnome.shell.extensions.runcat.RunnerPacks">
			<default>'cat'</default>
			<summary>Runner pack</summary>
			<description/>
		</key>
		
	</schema>
</schemalist>
