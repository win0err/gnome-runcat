{
	"compilerOptions": {
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		"target": "ESNext",
        "lib": ["ESNext"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
		"noUnusedLocals": true,
        "noUnusedParameters": true,
		"baseUrl": ".",
		"rootDirs": ["src"],
		"noImplicitAny": true
	},
    "include": ["./typings/*.d.ts", "./src/**/*"],
    "files": ["./src/extension.js", "./src/prefs.js"]
}
